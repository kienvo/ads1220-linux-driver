/dts-v1/;
/plugin/;

/ {
	compatible = "xunglong,orangepi-zero", "allwinner,sun8i-h2-plus";
	fragment@0 {
		target = <&pio>;
		__overlay__ {
			spi0_cs1: spi0_cs1 {
				pins = "PA21";
				function = "gpio_out";
				output-high;
			};

			spi1_cs1: spi1_cs1 {
				pins = "PA10";
				function = "gpio_out";
				output-high;
			};
		};
	};
	fragment@1 {
		target = <&spi0>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;
			status = "okay";
			pinctrl-names = "default", "default";
			pinctrl-1 = <&spi0_cs1>;
			cs-gpios = <0>, <&pio 0 21 0>; /* PA21 */
			
			spidev@0 {
				reg = <0>; /* Chip Select 0 */
				#compatible = "spidev";
				spi-max-frequency = <1000000>;
				status = "okay";
			};
		};
	};

	fragment@2 {
		target = <&spi1>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;
			status = "okay";
			pinctrl-names = "default", "default";
			pinctrl-1 = <&spi1_cs1>;
			cs-gpios = <0>, <&pio 0 10 0>; /* PA10 */

			spidev@1 {
				reg = <0>; /* Chip Select 0 */
				#compatible = "spidev";
				spi-max-frequency = <1000000>;
				status = "okay";
			};
		};
	};
};
